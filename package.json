{
  "name": "bc-24-postit",
  "version": "1.0.0",
  "description": "My postit app",
  "main": "server/dist/bin/www",
  "engines": {
    "node": "6.10.2"
  },
  "scripts": {
    "start": "node server/build/bin/www.js",
    "dev:start": "nodemon --exec \"npm start\"",
    "dev:start-es6": "babel-node server/www.js --presets es2015,stage-2",
    "dev:build-start": "nodemon --ignore server/build --exec \"npm run build-server & npm start\"",
    "build-server": "babel -d ./server/build ./server/server -s --presets es2015,stage-2",
    "devserver": "nodemon --exec \"npm run dev:server\"",
    "dev:start-template": "nodemon -e scss -x .js --ignore template/public/js --exec \"npm run build-css & npm run build-template-js & npm start\"",
    "dev:build-template": "nodemon -e scss --ignore template/public/js --exec \"npm run build-css & npm run build-template-js\"",
    "build-template-js": "babel template/es6 -d template/public/js --presets es2015,stage-2",
    "build-css": "node-sass --include-path scss template/scss/main.scss template/public/css/main.css && node-sass --include-path scss template/scss/message.scss template/public/css/message.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "test": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha server/**/*.test.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oahray/bc-24-postit.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/oahray/bc-24-postit/issues"
  },
  "homepage": "https://github.com/oahray/bc-24-postit#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.17.2",
    "dotenv": "^4.0.0",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "morgan": "^1.8.2",
    "pg": "^6.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "node-sass": "^4.5.3",
    "nodemon": "^1.11.0"
  }
}
